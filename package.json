{
  "name": "react-stack-boilerplate",
  "version": "1.0.0",
  "homepage": "https://mteres.github.io/react-stack-boilerplate",
  "description": "",
  "main": "src/index.js",
  "scripts": {
    "predeploy": "better-npm-run build",
    "deploy": "gh-pages -d dist",
    "start": "better-npm-run dev",
    "dev": "better-npm-run dev",
    "build": "better-npm-run build",
    "analyze": "better-npm-run analyze",
    "static": "better-npm-run build && serve ./dist",
    "build:translation": "babel-node --presets=es2015 ./i18n/bin/export-translate.js",
    "test": "jest"
  },
  "betterScripts": {
    "dev": {
      "command": "node ./bin/watch.js",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "build:*"
      }
    },
    "build": {
      "command": "node ./bin/build.js",
      "env": {
        "NODE_ENV": "production",
        "DEBUG": "build:*"
      }
    },
    "analyze": {
      "command": "node ./bin/analyze.js",
      "env": {
        "NODE_ENV": "production",
        "DEBUG": "build:*"
      }
    }
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-jest": "^22.4.1",
    "babel-loader": "^7.1.3",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-app": "^3.1.1",
    "babel-runtime": "^6.26.0",
    "better-npm-run": "^0.1.0",
    "case-sensitive-paths-webpack-plugin": "^2.1.1",
    "chalk": "^2.3.2",
    "cli-table2": "^0.2.0",
    "css-loader": "^0.28.10",
    "emoji-regex": "^6.5.1",
    "eslint": "^4.18.2",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-config-airbnb-base": "^11.3.1",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.0",
    "eslint-plugin-react": "^7.3.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^1.1.11",
    "fs-extra": "^5.0.0",
    "html-webpack-plugin": "^3.0.4",
    "react-dev-utils": "^5.0.0",
    "serve": "^6.5.2",
    "style-loader": "^0.20.2",
    "uglifyjs-webpack-plugin": "^1.2.2",
    "url-loader": "^1.0.1",
    "webpack": "^4.1.0",
    "webpack-bundle-analyzer": "^2.11.1",
    "webpack-dev-server": "^3.1.0"
  },
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-react-intl": "^2.4.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "gh-pages": "^1.1.0",
    "history": "^4.7.2",
    "jest": "^22.4.2",
    "lodash": "^4.17.5",
    "node-sass": "^4.7.2",
    "prop-types": "^15.6.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-helmet": "^5.2.0",
    "react-intl": "^2.4.0",
    "react-redux": "^5.0.7",
    "react-redux-router": "^0.0.14",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "^5.0.0-alpha.6",
    "react-test-renderer": "^16.2.0",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "sass-loader": "^6.0.7",
    "styled-components": "^3.2.0",
    "webpack-babel-jest": "^1.0.4"
  },
  "jest": {
    "moduleNameMapper": {
      "^.+\\.scss$": "<rootDir>/src/__tests__/style-mock.js"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "style-mock.js"
    ]
  }
}
