{
  "env": {
    "browser": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "extends": "airbnb",
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "react",
    "jsx-a11y",
    "import"
  ],
  "rules": {
    "array-bracket-spacing": [2, "never"],
    "arrow-body-style": 0,
    "arrow-parens": [2, "as-needed"],
    "brace-style": [2, "1tbs", { "allowSingleLine": true }],
    "class-methods-use-this": 0,
    "comma-dangle": [2, {
      "arrays": "always-multiline",
      "objects": "always-multiline",
      "imports": "always-multiline",
      "exports": "always-multiline",
      "functions": "ignore"
    }],
    "curly": [2, "multi-line", "consistent"],
    "global-require": 2,
    "max-len": [2, {
      "code": 100,
      "tabWidth": 2,
      "ignoreComments": true,
      "ignoreTrailingComments": true,
      "ignoreStrings": false,
      "ignoreRegExpLiterals": true
    }],
    "newline-before-return": 0,
    "no-confusing-arrow": [0],
    "no-multiple-empty-lines": 2,
    "no-nested-ternary": 0,
    "no-return-assign": 2,
    "no-underscore-dangle": 0,
    "no-unused-vars": [2, {
      "vars": "all",
      "args": "after-used",
      "varsIgnorePattern": "React"
    }],
    "no-useless-escape": 2,
    "object-curly-spacing": [2, "always"],
    "prefer-arrow-callback": 2,
    "prefer-const": [2, {
      "destructuring": "all"
    }],
    "semi": 2,

    "import/extensions" : [2, {
      "js": "never",
      "jsx": "never"
    }],
    "import/no-extraneous-dependencies": 0,
    "import/no-named-as-default": 0,
    "import/prefer-default-export": 0,

    "jsx-a11y/html-has-lang": 0,
    "jsx-a11y/href-no-hash": 0,

    "react/boolean-prop-naming": [2, { "rule": "^(is|has)[A-Z]([A-Za-z0-9]?)+" }],
    "react/button-has-type": 0,
    "react/default-props-match-prop-types": 2,
    "react/destructuring-assignment": [2, "always"],
    "react/forbid-component-props": 0,
    "react/forbid-dom-props": 0,
    "react/forbid-elements": 0,
    "react/forbid-foreign-prop-types": 2,

    "react/forbid-prop-types": 0,

    "react/jsx-curly-spacing": [2, { "when": "never", "spacing": {
      "allowMultiline": false,
      "objectLiterals": "always"
    }}],
    "react/jsx-boolean-value": [2, "never"],
    "react/jsx-closing-bracket-location": [2, "line-aligned"],
    "react/jsx-closing-tag-location": 2,
    "react/jsx-equals-spacing": [2, "never"],
    "react/jsx-curly-brace-presence": [2, "never"],
    "react/jsx-filename-extension": 0,
    "react/jsx-first-prop-new-line": [1, "multiline"],
    "react/jsx-handler-names": 0,
    "react/jsx-indent-props": [2, 2],
    "react/jsx-indent": [2, 2],
    "react/jsx-key": 2,
    "react/jsx-max-props-per-line": [2, {
      "maximum": 1,
      "when": "multiline"
    }],
    "react/jsx-no-bind": [2, {
      "allowBind": true,
      "ignoreRefs": false,
      "allowArrowFunctions": true,
      "allowFunctions": false
    }],
    "react/jsx-no-comment-textnodes": 1,
    "react/jsx-no-duplicate-props": [2, { "ignoreCase": true }],

    "react/jsx-no-literals": 0,
    "react/jsx-no-undef": [2, { "allowGlobals": false }],
    "react/jsx-no-target-blank": 0,
    "react/jsx-one-expression-per-line": 0,
    "react/jsx-pascal-case": 2,
    "react/jsx-sort-props": [2, {
      "callbacksLast": true,
      "shorthandFirst": true,
      "ignoreCase": true,
      "reservedFirst": ["key", "children", "dangerouslySetInnerHTML"]
    }],
    "react/jsx-tag-spacing": [2, {
      "closingSlash": "never",
      "beforeSelfClosing": "always",
      "afterOpening": "never"
    }],
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/jsx-wrap-multilines": 2,
    "react/no-access-state-in-setstate": 2,
    "react/no-array-index-key": 1,
    "react/no-children-prop": 0,
    "react/no-danger-with-children": 2,
    "react/no-danger": 1,
    "react/no-deprecated": 2,
    "react/no-did-mount-set-state": 2,
    "react/no-did-update-set-state": 2,
    "react/no-direct-mutation-state": 2,
    "react/no-find-dom-node": 2,
    "react/no-is-mounted": 2,
    "react/no-multi-comp": [2, { "ignoreStateless": true }],
    "react/no-render-return-value": 2,
    "react/no-set-state": 0,
    "react/no-string-refs": 2,
    "react/no-this-in-sfc": 0,
    "react/no-typos": 2,
    "react/no-unescaped-entities": 2,
    "react/no-unknown-property": 2,
    "react/no-unused-prop-types": 2,
    "react/no-unused-state": 2,
    "react/no-will-update-set-state": 2,
    "react/prefer-es6-class": 2,
    "react/prefer-stateless-function": 0,
    "react/prop-types": [2, { "ignore": ["children", "dispatch"] }],
    "react/react-in-jsx-scope": 2,
    "react/require-default-props": 2,

    "react/require-optimization": 0,

    "react/require-render-return": 2,
    "react/self-closing-comp": 2,
    "react/sort-comp": 2,
    "react/sort-prop-types": [2, {
      "requiredFirst": true,
      "callbacksLast": true
    }],
    "react/style-prop-object": 2,
    "react/void-dom-elements-no-children": 2
  }
}
